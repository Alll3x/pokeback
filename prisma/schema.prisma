generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  nickname   String   @unique
  password   String   
  status     Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("users")
}

